<script>
   document.addEventListener("DOMContentLoaded", function() {
    var options = {
        width: 400,
        zoomWidth: 500,
        offset: {vertical: 0, horizontal: 10}
    };
    new ImageZoom(document.getElementById("main_image"), options);
});
</script>

